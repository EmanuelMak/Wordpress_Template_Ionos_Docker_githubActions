# ========================================
# WORDPRESS DOCKER DEVELOPMENT SETUP
# ========================================

# Database Configuration
DB_NAME=wordpress
DB_USER=wp_user
DB_PASS=wp_password
DB_HOST=db

# WordPress Configuration
WORDPRESS_TITLE=My WordPress Site
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=secure_password_123
WORDPRESS_ADMIN_EMAIL=admin@example.com
WP_URL=http://localhost:8000

# Development Settings
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Production Deployment Settings
DEPLOY_PATH=/var/www/html
WEBSITE_URL=https://yourdomain.com

# IONOS SFTP Settings (for GitHub Actions)
IONOS_USERNAME=your_ionos_username
IONOS_HOST=your_ionos_host
IONOS_PASSWORD=your_ionos_password

# Theme Development
THEME_NAME=my-theme
THEME_VERSION=1.0.0
THEME_AUTHOR=Your Name
